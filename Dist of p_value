# distribution of p_value under null hypothesis

iter = 10000
n = 100
mu = 5
sd = 1

result = rep(NA, iter)
for(i in 1:iter)
{
   set.seed(i)
   x = rnorm(n, mean = mu, sd = sd)
   se = sd(x) / sqrt(n)
   t = ( mean(x) - mu ) / se
   prob_get_extream = 1 - pt(t, df = n - 1)
   result[i] = prob_get_extream
}

hist(result)
ks.test(result, runif(n))
